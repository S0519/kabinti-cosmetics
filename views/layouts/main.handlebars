<div class="container">
  <nav class="topnav">
    <ul class="nav-links">
      {{#if session.isAdmin}}
      {{else}}
      <li class="topnav-item"><a href="/cart"><i class="fas fa-shopping-cart"></i> ({{#if session.cart}}{{session.cart.totalQty}}{{else}}0{{/if}})</a></li>
      {{/if}}
      {{#if session.isLoggedIn}}
      <li class="topnav-item"><span>Welcome {{session.userName}}!</span></li>
      <li class="topnav-item btn-logout"><button>Logout</button></li>
      {{else}}
      <li id="show-login" class="topnav-item"><a href="#">Login</a></li>
      <li id="show-register" class="topnav-item"><a href="#">Register</a></li>
      {{/if}}
    </ul>
  </nav>
<nav class="custom-navbar">
      <a href="/" class="navbar-brand">
      <img src="/images/logo.png" alt="">
      {{#if session.isAdmin}}
      <h3 class="sub-heading">Admin</h3>
      {{else}}
      {{/if}}
      </a>
      <button id="btnMenu" class="btn-menu"><i class="fas fa-bars"></i></button>
      <ul class="main-nav-links">
        {{#if session.isAdmin}}
        <li class="nav-item"><a href="/add-category">add category</a></li>
        <li class="nav-item"><a href="/add-product">add product</a></li>
        <li class="nav-item"><a href="/products/all">products</a></li>
        <li class="nav-item"><a href="/about">about</a></li>
        <li class="nav-item"><a href="/contact">contact</a></li>
        {{else}}
        <li class="nav-item"><a href="/products/all">products</a></li>
        <li class="nav-item"><a href="/about">about</a></li>
        <li class="nav-item"><a href="/contact">contact</a></li>
        <li class="nav-item"><a href="/cart">Cart {{#if session.cart}}<span class="cart-total">{{session.cart.totalQty}}</span>{{else}}{{/if}}</a></li>
        {{/if}}
      </ul>
</nav>
</div>
    {{{ body }}}
{{#if session.isAdmin}}
{{else}}
 <section class="footer">
        <div class="container">
          <a class="footer-logo" href="/"><img src="/images/logo.png" alt="image"></a>
          <ul class="footer-nav-links">
            <li><a href="/products/all">Products</a></li>
            <li><a href="/about">About</a></li>
            <li><a href="/contact">Contact</a></li>
          </ul>
          <p class="copyright-text">Copyright 2021 | Kabinti</p>
        </div>
  </section>
{{/if}}
{{!-- modal login --}}
<div id="login-modal" class="popup-container">
   <div class="popup-content">
     <button class="btn-close"><i class="fas fa-times"></i></button>
     <h3 class="sub-heading2 dark text-center font-bold">Login</h3>
        <div class="row">
          <div class="col-12 col-sm-12 col-md-12 col-lg-12">
            <div class="formgroup1">
               <label for="user-email">email</label>
               <input name="user-email" placeholder="i.e:user@domain.com" type="text">
            </div>
          </div>
          <div class="col-12 col-sm-12 col-md-12 col-lg-12">
            <div class="formgroup1">
               <label for="user-password">password</label>
               <input name="user-password" placeholder="password" type="password">
            </div>
          </div>
        </div>
        <button id="btn-login" class="btn-submit">Login</button>
   </div>
</div>
{{!-- modal register --}}
<div id="register-modal" class="popup-container popup-reg-p">
   <div class="popup-content popup-content-reg-p">
     <button class="btn-close"><i class="fas fa-times"></i></button>
     <h3 class="sub-heading2 dark text-center font-bold">Register</h3>
        <div class="row">
          <div class="col-12 col-sm-12 col-md-12 col-lg-12">
            <div class="formgroup1">
               <label for="fullname">Name</label>
               <input name="fullname" placeholder="Alex" type="text">
            </div>
          </div>
          <div class="col-12 col-sm-12 col-md-12 col-lg-12">
            <div class="formgroup1">
               <label for="email">email</label>
               <input name="email" placeholder="user@domain.com" type="text">
            </div>
          </div>
          <div class="col-12 col-sm-12 col-md-12 col-lg-12">
            <div class="formgroup1">
               <label for="password">password</label>
               <input name="password" placeholder="password" type="password">
            </div>
          </div>
          <div class="col-12 col-sm-12 col-md-12 col-lg-12">
            <div class="formgroup1">
               <label for="c-password"> confirm password</label>
               <input name="c-password" placeholder="confirm password" type="password">
            </div>
          </div>
        </div>
        <button id="btn-register" class="btn-submit">Register</button>
   </div>
</div>

<script src="/js/main.js"></script>
<script src="/js/cart.js"></script>
<script src="/js/user.js"></script>
